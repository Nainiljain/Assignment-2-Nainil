<h1>Property Record #{{index}}</h1>
{{#if record}}
    <div class="property-card">
        {{#if record.images}}
            <img src="{{record.images}}" alt="Property Image" class="property-image">
        {{/if}}
        <div class="property-details">
            <p><strong>ID:</strong> {{record.id}}</p>
            <p><strong>Name:</strong> {{record.NAME}}</p>
            <p><strong>Host Name:</strong> {{record.host_name}}</p>
            <p><strong>Country:</strong> {{record.country}}</p>
            <p><strong>City:</strong> {{record.city}}</p>
            <p><strong>Room Type:</strong> {{record.room_type}}</p>
            <p><strong>Price:</strong> ${{record.price}}</p>
            <p><strong>Neighbourhood:</strong> {{record.neighbourhood}}</p>
        </div>
    </div>
    <div class="navigation">
        <a href="/data" class="btn">Back to Data Overview</a>
    </div>
{{else}}
    <p>No record found.</p>
{{/if}}